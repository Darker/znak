{
    "tasks": [
      {
        "type": "cppbuild",
        "label": "Emscripten build",
        "command": "D:\\JAKUB\\programming\\lib\\emsdk\\bazel\\emscripten_toolchain\\emcc.bat",
        "args": [
          "${file}",
          "-o","${workspaceFolder}\\node\\web\\${fileBasenameNoExtension}.html",
          "-O3",
          "-s", "NO_EXIT_RUNTIME=1",
          "-s", "\"EXPORTED_RUNTIME_METHODS=['ccall']\"",
          "-s", "MODULARIZE=1",
          "-s", "EXPORT_ES6=1",
          "-s","MINIFY_HTML=0",
          "-s","EXPORT_NAME=${fileBasenameNoExtension}",
          "-s","TEXTDECODER=2",
          "--shell-file", "${workspaceFolder}\\node\\templates\\shell_minimal.html",
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "type": "cppbuild",
        "label": "G++ MINGW",
        "command": "C:\\MinGW\\bin\\gcc.exe",
        "args": [
          "${file}",
          "-o","${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe",
          "-DDEBUG",
          "-std=c++2a",
          "-lstdc++",
          "-ggdb",
          "-g3",
          "-O0"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      },
    ],

    "version": "2.0.0"
}
